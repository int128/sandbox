{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>int128/renovate-base",
    "config:best-practices",
  ],
  "customManagers": [
    {
      "description": "Update go.mod with Dockerfile",
      "customType": "regex",
      "managerFilePatterns": ["go.mod"],
      "matchStrings": ["(?:^|\\n)go\\s+(?<currentValue>[0-9.]+)"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "golang"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["**/kustomization.yaml"],
      "matchStrings": [
        "https:\\/\\/raw\\.githubusercontent\\.com\\/(?<depName>[^/]+\\/[^/]+?)\\/(?<currentDigest>[^/]+)\\/.+\\s#\\s+(?<currentValue>.+)\\n",
        "https://github.com/(?<depName>.*?)/releases/download/(?<currentValue>[^/]+)/",
      ],
      "datasourceTemplate": "github-releases"
    },
  ],
}
